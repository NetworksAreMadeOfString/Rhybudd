<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/ZaasLightBlue" />
            <stroke
                android:width="1dp"
                android:color="@color/ZaasDarkBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ZaasDarkBlue" />
            <stroke
                android:width="1dp"
                android:color="@color/ZaasDarkBlue" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>