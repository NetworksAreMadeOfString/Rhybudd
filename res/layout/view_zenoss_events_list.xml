<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FlatGray">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:id="@+id/events_list"
          android:name="net.networksaremadeofstring.rhybudd.ViewZenossEventsListFragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context=".ViewZenossEventsListActivity"
          android:layout_marginLeft="@dimen/EventListFragmentMargins"
          android:layout_marginRight="@dimen/EventListFragmentMargins"
          tools:layout="@android:layout/list_content" />
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="#111"/>
</android.support.v4.widget.DrawerLayout>