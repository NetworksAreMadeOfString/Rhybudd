
    <ScrollView android:id="@+id/scrollView1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:isScrollContainer="true" android:fadeScrollbars="true" android:fadingEdge="vertical" android:scrollbars="vertical" android:layout_height="wrap_content">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/URLLabel" android:layout_marginLeft="6px" android:layout_marginTop="6dp" android:text="Zenoss URL:"></TextView>
        <EditText android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:id="@+id/ZenossURL" android:hint="http://zenoss.url:8080" android:layout_below="@+id/URLLabel" android:layout_width="fill_parent" android:layout_marginLeft="10px" android:layout_marginRight="10px" android:inputType="textUri">
            <requestFocus></requestFocus>
        </EditText>
        <EditText android:inputType="textPersonName" android:layout_height="wrap_content" android:id="@+id/ZenossUserName" android:layout_marginLeft="10px" android:layout_width="fill_parent" android:layout_marginRight="10px" android:hint="Zenoss User Name" android:layout_below="@+id/ZenossURL" android:layout_marginTop="6dp"></EditText>
        <EditText android:inputType="textPassword" android:layout_height="wrap_content" android:id="@+id/ZenossPassword" android:layout_width="fill_parent" android:layout_marginLeft="10px" android:layout_marginRight="10px" android:layout_below="@+id/ZenossUserName" android:hint="Zenoss Password"></EditText>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/ZenossPassword" android:layout_centerHorizontal="true" android:id="@+id/PasswordWarning" android:textSize="4pt" android:text="!! Password is stored unencrypted on local storage !!" android:textColor="#FF0000"></TextView>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/SaveButton" android:text="Save Settings" android:layout_below="@+id/AllowBackgroundService" android:layout_marginTop="12px"></Button>
        
        
        
        <TextView android:layout_below="@+id/PasswordWarning" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:text="PagerDuty Subdomain:" android:layout_marginLeft="6px" android:layout_marginTop="6dp" android:id="@+id/PagerDutyDomainLabel"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/PagerDutyURL" android:layout_width="fill_parent" android:layout_marginLeft="10px" android:layout_marginRight="10px" android:layout_below="@+id/PagerDutyDomainLabel" android:hint="subdomain.pagerduty.com"></EditText>
        <EditText android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_width="fill_parent" android:layout_marginLeft="10px" android:hint="email@domain.com" android:id="@+id/PagerDutyEmailAddress" android:layout_marginRight="10px" android:layout_below="@+id/PagerDutyURL" android:layout_marginTop="6dp" android:inputType="textEmailAddress"></EditText>
        <CheckBox android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/AllowBackgroundService" android:text=" Background poller" android:layout_alignParentLeft="true" android:layout_centerHorizontal="false" android:layout_marginLeft="10px" android:layout_below="@+id/PagerDutyPassword" android:layout_marginTop="6dp"></CheckBox>
        <SeekBar android:layout_height="wrap_content" android:id="@+id/BackgroundServiceDelay" android:layout_toRightOf="@+id/AllowBackgroundService" android:layout_marginLeft="20px" android:layout_width="180px" android:progress="30" android:layout_below="@+id/PagerDutyPassword" android:layout_marginTop="15dp" android:max="900"></SeekBar>
        <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:layout_below="@+id/BackgroundServiceDelay" android:layout_alignRight="@+id/ZenossPassword" android:layout_marginRight="16dp" android:id="@+id/DelayLabel" android:text="30 secs" android:textSize="4pt"></TextView>
        <EditText android:layout_height="wrap_content" android:inputType="textPassword" android:layout_below="@+id/PagerDutyEmailAddress" android:id="@+id/PagerDutyPassword" android:layout_centerHorizontal="true" android:layout_marginLeft="10px" android:layout_marginRight="10px" android:layout_width="fill_parent" android:hint="PagerDuty Password"></EditText>
    </RelativeLayout>
    
    
    
    </ScrollView>
