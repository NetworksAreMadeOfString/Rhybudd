<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="64dp" >

    <ImageView
        android:id="@+id/fragment_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:minHeight="24dp"
        android:minWidth="4dp"
        android:src="@drawable/event_fragment_indicator" />


    <ImageView
        android:id="@+id/AckImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/nack" >

    </ImageView>


    <ProgressBar
        android:id="@+id/inProgressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:indeterminate="true" >

    </ProgressBar>



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/SeverityImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/severity_info" />




        <ToggleButton
            android:id="@+id/cabSelect"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rhybudd_selector"
            android:textOn="@string/empty"
            android:textOff="@string/empty" />

    </LinearLayout>






    <TextView
        android:id="@+id/DeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dateTime"
        android:layout_toRightOf="@+id/linearLayout1"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/RhybuddTitleText"
        android:textStyle="bold" />










    <TextView
        android:id="@+id/EventSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DeviceName"
        android:layout_below="@+id/DeviceName"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/AckImage"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/RhybuddStdText" />


















    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/RhybuddStdText"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/StatsIndicator"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/EventSummary"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/inProgressBar"
        android:layout_toRightOf="@+id/linearLayout1"
        android:divider="@drawable/vert_split"
        android:dividerPadding="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:showDividers="middle" >

        <TextView
            android:id="@+id/ackAuthor"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp"
            android:text="none"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/RhybuddStdText" />

        <TextView
            android:id="@+id/EventCount"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/RhybuddStdText" />

        <TextView
            android:id="@+id/prodState"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp"
            android:text="Production"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/RhybuddStdText" />

    </LinearLayout>

</RelativeLayout>
