<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerVertical"
              android:orientation="horizontal"
              android:showDividers="middle"
              tools:context=".TrapListActivity"
              android:background="@color/FlatGray">

    <!--
    This layout is a two-pane layout for the Traps
    master/detail flow. See res/values-large/refs.xml and
    res/values-sw600dp/refs.xml for an example of layout aliases
    that replace the single-pane version of the layout with
    this two-pane version.

    For more on layout aliases, see:
    http://developer.android.com/training/multiscreen/screensizes.html#TaskUseAliasFilters
    -->

    <fragment
        android:id="@+id/device_list"
        android:name="net.networksaremadeofstring.rhybudd.ViewZenossDeviceListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/FragmentMargins"
        android:layout_weight="2"
        android:tag="ListofDevices"
        tools:layout="@android:layout/list_content" />

    <FrameLayout
        android:id="@+id/device_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />
</LinearLayout>